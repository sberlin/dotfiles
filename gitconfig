alias.dc='diff --cached'
alias.d='diff'
alias.deco='log --decorate --graph --format=fuller --all --simplify-by-decoration'
alias.f='fetch'
alias.ff='merge --ff-only'
alias.ignored='!git ls-files -v | grep "^[[:lower:]]"'
alias.ignore='update-index --assume-unchanged'
alias.la='log --decorate --graph --format=fuller --all'
alias.lapu='log --decorate --graph --format=fuller --all --not --remotes'
alias.last='log --decorate --graph --format=fuller --all --name-status'
